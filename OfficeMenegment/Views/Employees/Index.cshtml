@model List<EmployeeModel>

<div class="container w-75">
    <h2 class="text-center">Employees</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Salary</th>
                <th>Department</th>
                <th>DateBirthday</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Department</td>
                    <td>@employee.DateBirthday.ToString("d")</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id">
                            <span title="Edit">
                                <i class="fas fa-sharp fa-regular fa-user-pen"></i>
                            </span>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.Id">
                            <span title="Delete">
                                <i class="fas fa-solid fa-user-xmark"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
@model List<EmployeeDbModel>

<div class="container w-75">
    <h2 class="text-center">Employees</h2>

    <div>
        <div class="container text-end mt-5 mb-3">
            <a asp-controller="Employees" asp-action="Add" class="me-5" title="Add employee">
                    <i class="fas fa-solid fa-person-circle-plus fa-lg"></i>
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Salary</th>
                <th>Department</th>
                <th></th>
                <th>DateBirthday</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Salary</td>
                    <td>
                        @foreach(var department in employee.Departments)
                        {
                            <p>@department.Name</p>
                        }
                    </td>
                    <td>
                        <a asp-controller="Departments" asp-action="GetNames" asp-route-id="@employee.Id">
                            <span title="Add departments">
                                <i class="fas fa-solid fa-building-user"></i>
                            </span>
                        </a>
                    </td>
                    <td>@employee.DateBirthday.ToString("d")</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id">
                            <span title="Edit">
                                <i class="fas fa-sharp fa-regular fa-user-pen"></i>
                            </span>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.Id">
                            <span title="Delete">
                                <i class="fas fa-solid fa-user-xmark"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>